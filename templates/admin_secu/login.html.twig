{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block monTitre %}
Login
{% endblock %}
{% block body %}
{% if error %}
{# error est envoyé du AdminSecuController
   on modifie translation.yaml (change en par fr)
   trans est la fonction de translation.yaml qui permet d'afficher le message en Français
 #}
<div class="alert alert-danger">
    {{error.messageKey | trans(error.messagedata, 'security')}}
</div>
{% endif %}
<form action="{{path('connexion')}}" method="post">
    <div class="form-group">
        <label for="">Login : </label>
        <input type="text" required name="_username" class="form-control">
    </div>
    <div class="form-group">
        <label for="">Password : </label>
        <input type="password" required name="_password" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="Valider">

</form>
{% endblock %}