{% extends 'base.html.twig' %}

{% block title %}Aliments{% endblock %}

{% block monTitre %}
    Liste de tous les aliments
    {% if isCalorie %}
        avec moins de 35 calories
    {% elseif isGlucide %}
        avec moins de 3 glucides
    {% endif %}
{% endblock %}
{% block body %}
    <a href="{{path("aliments")}}" class="btn btn-primary">Tous</a>
    <a href="{{path("alimentsParCalorie", {"calorie": 35})}}" class="btn btn-primary">Aliments avec moins de 35 calories au 100g</a>
    <a href="{{path("alimentsParGlucide", {"glucide": 3})}}" class="btn btn-primary">Aliments avec moins de 6 glucides au 100g</a>
    <div class="row">
        {% for aliment in aliments %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class ="card border-primary mb-3 mx-auto" style="max-width:20rem">
                    <div class="card-header text-center">
                        <img src="{{asset('images/aliments/' ~ aliment.image)}}" class="perso_imgAliment card-img-top">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{aliment.nom}}</h3>
                        <p class="card-text">
                        <h4 class="text-center">Prix (kilo) : {{aliment.prix}}</h4>
                        <h4 class="text-center">Type : {{aliment.type.libelle}}</h4>
                        <table class="table text-center">
                            <tr class="table-primary">
                                <td>Propriété</td>
                                <td>Valeur (100g)</td>
                            </tr>
                            <tr>
                                <td>Calorie</td>
                                <td>{{aliment.calorie}}</td>
                            </tr>
                            <tr>
                                <td>Protéines</td>
                                <td>{{aliment.proteine}}</td>
                            </tr>
                            <tr>
                                <td>Glucides</td>
                                <td>{{aliment.glucide}}</td>
                            </tr>
                            <tr>
                                <td>Lipides</td>
                                <td>{{aliment.lipide}}</td>
                            </tr>
                        </table>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
